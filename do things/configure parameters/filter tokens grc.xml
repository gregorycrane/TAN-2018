<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="filter.rnc" type="application/relax-ng-compact-syntax"?>
<alter-tan-file xmlns="tag:textalign.net,2015:ns">
    <!-- alter instructions to get alternative forms of Greek tokens -->
    <phase-list>
        <phase xml:id="terminal-acute-to-grave"/>
    </phase-list>
    <alter node-type="text">
        <replace pattern="(.+)(\u{.greek.acute})(\u{!alpha, !epsilon, !eta, !iota, !omicron, !upsilon, !omega}*)$" replacement=""/>
    </alter>

</alter-tan-file>